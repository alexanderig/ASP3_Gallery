<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Picture Gallery</title>

    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/lightbox")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/lclightbox")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryunobtrusive") @*функциональность Ajax-хелперов*@



    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">
</head>
<body>

    <div id="demo" class="carousel slide carousel-fade" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
            <li data-target="#demo" data-slide-to="3"></li>
            <li data-target="#demo" data-slide-to="4"></li>
            <li data-target="#demo" data-slide-to="5"></li>
            <li data-target="#demo" data-slide-to="6"></li>
           
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Images/g1.jpg" alt="Mountains" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>Canadian Mountains</h3>
                    <p>Tree over the lake</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/g2.jpg" alt="Gallery" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>New York</h3>
                    <p>Art Gallery</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/g3.jpg" alt="Apartment" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>Apartment</h3>
                    <p>Apartment decoration "Greece"</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/g4.jpg" alt="Nature" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>Nature Beauty</h3>
                    <p>Tree between shallow lake</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/g5.jpg" alt="Gallery" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>New York</h3>
                    <p>Art Exhibition in New York</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/g6.jpg" alt="Gallery" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>Paris</h3>
                    <p>Art Gallery in Paris</p>
                </div>
            </div>
            <div class="carousel-item">
                <img src="~/Images/g7.jpg" alt="Gallery" width="1100" height="350">
                <div class="carousel-caption">
                    <h3>Chicago</h3>
                    <p>Unknown Art Apartment</p>
                </div>
            </div>
           

            </div>
            <a class="carousel-control-prev" href="#demo" data-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </a>
            <a class="carousel-control-next" href="#demo" data-slide="next">
                <span class="carousel-control-next-icon"></span>
            </a>
        </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark sticky-top">
        <a class="navbar-brand" href="#"><span style="font-family:'Copperplate Gothic'; font-weight:bold; color:antiquewhite">Picture Gallery</span></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor02" aria-controls="navbarColor02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor02">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="/"><i class="fas fa-home"></i></a>
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Home", "Index", "Home", new object(), new { @class = "nav-link" })
                </li>
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        Albums
                    </a>
                    <div class="dropdown-menu bg-dark" id="usermenu">
                        @if (Session["Name"] != null)
                        {
                            <a class="dropdown-item text-muted" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Home/Album"><i class="fas fa-camera-retro text-warning"></i> My Albums </a>
                        }
                        <a class="dropdown-item text-muted" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Home/Allbums"><i class="fas fa-images text-warning"></i> All Albums </a>

                    </div>
                </li>
            </ul>

            <ul class="navbar-nav my-2 my-lg-0">
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                        More Info
                    </a>
                    <div class="dropdown-menu bg-dark">
                        <a class="dropdown-item text-muted" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Home/Contact"><i class="fas fa-at text-warning"></i> Contacts </a>
                        <a class="dropdown-item text-muted" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Home/About"><i class="fas fa-info-circle text-warning"></i> About </a>
                    </div>
                </li>

                <li class="d-flex" id="navbardiv">
                    @if (Session["Name"] != null)
                    {

                        <div id="loggedid" class="nav-item"><a class="nav-link" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Home/Logged"><i class="fas fa-user-tie text-warning"></i> Account - @Session["Login"]</a></div>
                    }
                    else
                    {
                        <div id="signid" class="nav-item"><a class="nav-link" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Account/Register"><i class="fas fa-user-plus text-warning"></i> Sign Up</a></div>
                        <div id="loginid" class="nav-item"><a class="nav-link" data-ajax="true" data-ajax-mode="replace" data-ajax-update="#mybody" href="/Account/Login"><i class="fas fa-sign-in-alt text-warning"></i> Login</a></div>
                    }
                </li>

            </ul>

        </div>
    </nav>



    <div class="container body-content" id="mybody">
        @RenderBody()
        <hr />

    </div>
    @*
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/bootstrap")
    *@
    @RenderSection("scripts", required: false)
    <div class="bg-light fixed-bottom text-md-left" style="margin-bottom:0; height:55px">
        <div class="d-flex">
            <div class="col-sm-9" style=" margin:0px; height: 30px">
                <p>&copy; @DateTime.Now.Year - <span style="font-family:'Copperplate Gothic'; font-weight:bold; font-size:16pt; color:darkslategray">Picture Gallery</span> All rights Reserved. No copy without written permission   </p>

            </div>
            <div class="col-sm-3">
                <div class="btn-group-sm">
                    <a href="https://web.telegram.org/" target="_blank" class="btn btn-light"><i class="fab fa-telegram text-primary"></i> Telegram</a>
                    <a href="https://www.facebook.com/" target="_blank" class="btn btn-light"><i class="fab fa-facebook text-primary"></i> FaceBook</a>
                    <a href="https://twitter.com/" target="_blank" class="btn btn-light"><i class="fab fa-twitter text-primary"></i> Twitter</a>
                </div>
            </div>
        </div>
        <div class="row" style="margin-top:0; margin-bottom:0">
            <div class="col-sm-8">
                <a href="#" class="text-muted text-sm">Cookies</a>
            </div>
            <div class="col-sm-4">
                <div class="text-sm-right text-xs-left">
                    <small class="text-muted">© Copyright. All rights reserved.</small>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
